<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/_16px_in720p" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_84px_in720p" >

        <ImageView
            android:id="@+id/setting_logo"
            android:layout_width="@dimen/_64px_in720p"
            android:layout_height="@dimen/_64px_in720p"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/_8px_in720p"
            android:scaleType="fitCenter"
            android:src="@drawable/icon_setting" />

        <TextView
            android:id="@+id/txt_title"
            style="@style/font_big_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/_16px_in720p"
            android:layout_toRightOf="@+id/setting_logo"
            android:text="设置" />

        <ImageButton
            android:id="@+id/btn_tomain"
            android:layout_width="@dimen/_64px_in720p"
            android:layout_height="@dimen/_64px_in720p"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/btn_selector2"
            android:scaleType="fitCenter"
            android:src="@drawable/setting_back" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_34px_in720p"
        android:background="@drawable/btn_selector1"
        android:orientation="vertical">

        <!-- 换肤 -->

        <RelativeLayout
            android:id="@+id/setting_skin"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/_125px_in720p" 
            android:background="@drawable/btn_selector2"
            android:clickable="true"
            android:paddingLeft="@dimen/_16px_in720p" 
            android:paddingRight="@dimen/_16px_in720p" 
            android:paddingBottom="@dimen/_24px_in720p"
            android:paddingTop="@dimen/_24px_in720p" >

            <TextView
                android:id="@+id/setting_skin_tv"
                style="@style/font_middle_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="换肤" />

            <ImageView style="@style/setting_img_icon" />
        </RelativeLayout>

        <ImageView style="@style/img_gray_line" />
        <!-- 清除缓存 -->

        <RelativeLayout
            android:id="@+id/setting_cache"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/_125px_in720p" 
            android:background="@drawable/btn_selector2"
            android:clickable="true"
            android:paddingLeft="@dimen/_16px_in720p" 
            android:paddingRight="@dimen/_16px_in720p" 
            android:paddingBottom="@dimen/_24px_in720p"
            android:paddingTop="@dimen/_24px_in720p" >

            <TextView
                android:id="@+id/setting_cache_tv"
                style="@style/font_middle_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="false"
                android:text="清除缓存" />

            <TextView
                android:id="@+id/setting_cache_size"
                style="@style/font_small_gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/setting_cache_tv"
                android:text="当前缓存20M" />

            <ImageView style="@style/setting_img_icon" />
        </RelativeLayout>

        <ImageView style="@style/img_gray_line" />
        <!-- 自定义下载路径 -->

        <RelativeLayout
            android:id="@+id/setting_downloadpath"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/_125px_in720p" 
            android:background="@drawable/btn_selector2"
            android:clickable="true"
            android:paddingLeft="@dimen/_16px_in720p" 
            android:paddingRight="@dimen/_16px_in720p" 
            android:paddingBottom="@dimen/_24px_in720p"
            android:paddingTop="@dimen/_24px_in720p" >

            <TextView
                android:id="@+id/setting_downloadpath_tv"
                style="@style/font_middle_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="false"
                android:text="自定义歌曲下载路径" />

            <TextView
                android:id="@+id/setting_song_path"
                style="@style/font_small_gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/setting_downloadpath_tv"
                android:paddingRight="@dimen/_16px_in720p"
                android:text="当前路径" />

            <ImageView style="@style/setting_img_icon" />
        </RelativeLayout>

        <ImageView style="@style/img_gray_line" />
        <!-- 关于 -->

        <RelativeLayout
            android:id="@+id/setting_about"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_125px_in720p" 
            android:background="@drawable/btn_selector2"
            android:clickable="true"
            android:paddingLeft="@dimen/_16px_in720p" 
            android:paddingRight="@dimen/_16px_in720p" 
            android:paddingBottom="@dimen/_24px_in720p"
            android:paddingTop="@dimen/_24px_in720p" >

            <TextView
                android:id="@+id/setting_about_tv"
                style="@style/font_middle_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="关于" />

            <ImageView style="@style/setting_img_icon" />
        </RelativeLayout>
    </LinearLayout>


  <RelativeLayout
        android:id="@+id/btn_exit"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10px_in720p"
        android:background="@drawable/btn_selector1"
        android:onClick="true"
        android:padding="@dimen/_20px_in720p" >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="@dimen/_52px_in720p"
                android:layout_height="@dimen/_47px_in720p"
                android:layout_gravity="center"
                android:src="@drawable/icon_exit" />

            <TextView
                style="@style/font_big_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"              
                android:paddingLeft="@dimen/_16px_in720p"
                android:text="退出" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>
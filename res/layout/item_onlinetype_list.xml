<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/_16px_in720p"
    android:paddingTop="@dimen/_16px_in720p" >

    <RelativeLayout
        android:id="@+id/lay_in"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_24px_in720p"
        android:layout_marginBottom="@dimen/_24px_in720p"
       >

        <ImageView
            android:id="@+id/imgdef"
            android:layout_width="@dimen/_4px_in720p"
            android:layout_height="@dimen/_34px_in720p"
            android:layout_centerVertical="true"
            android:background="@color/blue1" />

        <TextView
            android:id="@+id/txtName"
            style="@style/font_middle_black"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginLeft="@dimen/_24px_in720p"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/imgdef" />
    </RelativeLayout>

    <phone.wobo.music.online.MyGridView
        android:id="@+id/grid_subtype"
        style="@style/gridview_style2"
        android:verticalSpacing="@dimen/_8px_in720p"
        android:layout_below="@+id/lay_in"
        android:numColumns="3" >
    </phone.wobo.music.online.MyGridView>

</RelativeLayout>
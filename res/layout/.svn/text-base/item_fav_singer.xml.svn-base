<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/singer_fav"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="false" >

    <ImageView
        android:id="@+id/poster"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/_178px_in720p"
        android:layout_centerHorizontal="true"
        android:scaleType="centerCrop"
        android:src="@drawable/online_grid_loading_default" />

    <TextView
        android:id="@+id/txtName"
        style="@style/font_middle_black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/poster"
        android:layout_centerHorizontal="true"
        android:background="#00000000"
        android:paddingBottom="@dimen/_13px_in720p"
        android:paddingTop="@dimen/_13px_in720p" />

</RelativeLayout>
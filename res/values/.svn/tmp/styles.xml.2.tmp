<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppTheme" parent="android:Theme.Light" />

    <style name="Theme.AppStartLoad" parent="android:Theme.Black">
        <item name="android:windowNoTitle">true</item>
    </style>
	<style name="layout_background">
		<item name="android:background">@color/white</item>
    </style>

    <!-- 大号字体 -->
    <style name="font_big_black">
        <item name="android:textSize">@dimen/_40px_in720p</item><!-- 24px 800*480 -->
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:singleLine">true</item>
        <item name="android:textStyle">normal</item>       
    </style>

    <style name="font_big_white">
        <item name="android:textSize">@dimen/_40px_in720p</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>
    <!-- 中号字体 14sp -->
    <style name="font_middle_blue">
        <item name="android:textSize">@dimen/_30px_in720p</item>
        <item name="android:textColor">@color/blue1</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="font_middle_white">
        <item name="android:textSize">@dimen/_30px_in720p</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="font_middle_black">
        <item name="android:textSize">@dimen/_30px_in720p</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>
  <style name="font_middle_gray">
        <item name="android:textSize">@dimen/_30px_in720p</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>
    <!-- 小号字体 12sp -->
    <style name="font_small_white">
        <item name="android:textSize">@dimen/_26px_in720p</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="font_small_black">
        <item name="android:textSize">@dimen/_26px_in720p</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="font_small_gray">
        <item name="android:textSize">@dimen/_26px_in720p</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:singleLine">true</item>
    </style>

    <!-- 设置界面的图标 -->
    <style name="setting_img_icon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:src">@drawable/setting_07</item>
             
    </style>
    <!-- 灰色线 -->
 <style name="img_gray_line">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">1dp</item>
         <item name="android:layout_marginTop">@dimen/_16px_in720p</item>
        <item name="android:layout_marginBottom">@dimen/_16px_in720p</item>      
        <item name="android:background">@color/gray</item>
       
    </style>
    
    <!-- listview样式 -->
    <style name="listview_style1">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/_16px_in720p</item>
        <item name="android:layout_marginRight">@dimen/_16px_in720p</item>
        <item name="android:divider">@color/gray1</item>
        <item name="android:dividerHeight">@dimen/_2px_in720p</item>
        <item name="android:listSelector">@drawable/item_selector</item>
         <item name="android:scrollbars">none</item>       
    </style>
        <!-- gridview样式1 -->
    <style name="gridview_style1">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/_2px_in720p</item> 
         <item name="android:layout_marginRight">@dimen/_2px_in720p</item> 
      <item name="android:gravity">center</item>
        <item name="android:horizontalSpacing">@dimen/_2px_in720p</item>
        <item name="android:verticalSpacing">@dimen/_2px_in720p</item>
        <item name="android:listSelector">@drawable/item_selector</item>
         <item name="android:scrollbars">none</item>       
    </style>
    <!-- gridview样式2 -->
    <style name="gridview_style2">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/_16px_in720p</item> 
         <item name="android:layout_marginRight">@dimen/_16px_in720p</item> 
      <item name="android:gravity">center</item>
        <item name="android:horizontalSpacing">@dimen/_16px_in720p</item>
        <item name="android:verticalSpacing">@dimen/_34px_in720p</item>
        <item name="android:listSelector">@drawable/item_selector</item>
         <item name="android:scrollbars">none</item>       
    </style>
    
    <style name="mediaplayer_control_bar_btn">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textSize">@dimen/font_b1</item>
        <item name="android:singleLine">true</item>
    </style>

    
    <!-- 缓存对话框样式  -->
    <style name="setting_cache_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

 <!-- 加载框  -->
     <style name="loadingDialog" parent="android:style/Theme.Dialog">
	    <item name="android:windowFrame">@null</item>
	　　<item name="android:windowIsFloating">true</item>
	　　<item name="android:windowIsTranslucent">false</item>
	　　<item name="android:windowNoTitle">true</item>
	　　<item name="android:windowBackground">@android:color/transparent</item>
	　　<item name="android:backgroundDimEnabled">false</item>
		<item name="android:windowContentOverlay">@null</item>
		<item name="android:textSize">25sp</item> 
  	</style>

    
	<style name="notification_paly_btn">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/btn_selector2</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_vertical</item>
    </style>
<style name="WoboDialog" parent="@android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item> 
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
</resources>